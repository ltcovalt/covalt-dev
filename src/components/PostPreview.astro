---
const { post, class: classes, featured } = Astro.props;
const transitionClass = 'transition-all duration-400';
---

<div
	class="bg-base-200 group hover:border-base-content/10 text-base-content/50 border-base-300 relative flex max-h-[24em] min-h-[16em] flex-col gap-2 rounded-xl border p-4 text-center hover:scale-105"
	class:list={[transitionClass, classes]}
>
	<a href={'/posts/' + post.data.slug} class="absolute inset-0 z-10" aria-label={post.data.title}></a>

	<!-- title -->
	<div class="flex h-[3em] max-h-[3em] min-h-[3em] items-center justify-center">
		<div
			class="group-hover:text-base-content line-clamp-2 leading-tight font-extrabold"
			class:list={[featured ? 'text-2xl' : 'text-lg']}
		>
			{post.data.title}
		</div>
	</div>

	<!-- animated underline -->
	<div
		class="group-hover:bg-secondary bg-secondary/30 mx-auto h-0.5 w-[4ch] rounded-xl group-hover:w-[50%]"
		class:list={[transitionClass]}
	>
	</div>

	<!-- body -->
	<div
		class="text-base-content/30 group-hover:text-base-content/80 flex flex-1 items-center"
		class:list={[transitionClass]}
	>
		{post.data.description}
	</div>

	<!-- date formatted as yyyy-mm-dd -->
	<div class="text-base-content/30 mt-auto text-left text-sm">
		{post.data.date.toISOString().slice(0, 10)}
	</div>
</div>
