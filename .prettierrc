{
	"plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"proseWrap": "always",
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",

	"overrides": [
		{
			"files": ["*.md", "*.mdx"],
			"options": {
				"printWidth": 80,
				"proseWrap": "always"
			}
		}
	]
}
